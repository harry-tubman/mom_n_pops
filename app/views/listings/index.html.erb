<div class="jumbotron">
</div>
<div>
  <div class="row">
   <div class="col-md-6">
    <h2> Shop Local </h2>
    <% @listings.each do |listing| %>
      <div class="col-md-6">
        <div class="thumbnail">
          <%= link_to image_tag(listing.image.url), listing %>
          <div class="caption">
            <h2><%= listing.name %></h2>
            <p><b>Price: </b><%= number_to_currency(listing.price) %></p>
            <p><b>Sold by:</b><%= link_to "#{listing.user.name}", listing.user %></li></p>
            <p><b>Tags:</b> <%= raw listing.all_tags %></p>
            <br></br>
            <p><%= link_to "See more", listing, class: "btn btn-primary" %></li><%=  %></p>
          </div>
        </div>
      </div>
    <% end %>
    </div>
    
    <div class="col-md-6">
    <h2> Support Local Causes </h2>
    <% @causes.each do |listing| %>
      <div class="col-md-6">
        <div class="thumbnail">
          <%= link_to image_tag(listing.image.url), listing %>
          <div class="caption">
            <h2><%= listing.name %></h2>
            <p><b>Suggested Donation: </b><%= number_to_currency(listing.price) %></p>
            <p><b>By:</b><%= link_to "#{listing.user.name}", listing.user %></li></p>
            <p><b>Tags:</b> <%= raw listing.all_tags %></p>
            <br></br>
            <p><%= link_to "See more", listing, class: "btn btn-primary" %></li><%=  %></p>
          </div>
        </div>
      </div>
    <% end %>
    </div>
    
    
  </div>
  

<br>

<% if user_signed_in? %>
  <%= link_to 'New Listing', new_listing_path, class: "btn btn-link", data: { no_turbolink: true } %>
<% end %>