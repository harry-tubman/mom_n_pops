<h2>Sign up</h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
  
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, :autofocus => true, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :email %>
    <%= f.email_field :email, :autofocus => true, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :password %>
    <%= f.password_field :password, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation, class: "form-control" %>
  </div>
  
  
   <div class="form-group">
  <%= f.label "Select Account type:", :class=>"control-label input-group" %>
      <div class="btn-group" data-toggle="buttons">
         <label class="btn btn-default active">
        <%= f.radio_button :designation, "Community Member" %>Community Member/Shopper
        </label>
        <label class="btn btn-default">
          <%= f.radio_button :designation, "Community Organization" %> Community Organization/Non-Profit
        </label>
        <label class="btn btn-default">
        <%= f.radio_button :designation, "Small Business" %>Small Business
        </label>
        <label class="btn btn-default">
        <%= f.radio_button :designation, "Independent Vendor" %>Independent Vendor
        </label>
      </div>
    </div>

  <div class="form-group">
    <%= f.submit "Sign up", class: "btn btn-primary" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>